import edu.fcps.karel2.Display;

public class Dorothy extends Athlete {

	public Dorothy() {
		// TODO Auto-generated constructor stub
	}

	public Dorothy(int x, int y) {
		super(x, y,Display.EAST,0);
		// TODO Auto-generated constructor stub
	}

	public boolean findPath() {
		if(!frontIsClear() && leftIsClear()) {
			turnleft();
			move();
			if(nextToABeeper()) {
				return true;
			}
			turnAround();
			move();
			
			move();
			if(nextToABeeper()) {
				return true;
			}
			turnAround();
			move();
			turnRight();
		}else {
			if(nextToABeeper()) {
				return true;
			}
			turnAround();
			move();
			turnright();
			move();
			if(nextToABeeper()) {
				return true;
			}
			turnAround();
			move();
			move();
			if(nextToABeeper()) {
				return true;
			}
			turnAround();
			move();
			turnRight();
		}
		return false;
	}
	 public void fllowPath() {
		 while(nextToABeeper() && frontIsClear()) {
			 move();
		 }/*
		 if(frontIsClear()) {
			 turnAround();
			 move();
			 turnAround();
		 }*/
	 }
}
