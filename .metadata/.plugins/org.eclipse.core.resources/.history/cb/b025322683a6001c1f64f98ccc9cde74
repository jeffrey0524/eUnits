   import edu.fcps.karel2.Display;
    public class Pirate extends Athlete
   {
       public Pirate()
      {
        while(!nextToABeeper()) {
        	move();
        }
      }
       public void approachPile()
      {
        
      }
       public int numOfBeepersInPile()
      {
        int count = 0;
        while(nextToABeeper()) {
        	pickBeeper();
        	count++;
        }
        return count;
      }
       public void turnAppropriately(int beepers)
      {
    	   switch(beepers) {
    	    case 1:
    	        turnleft();
    	        break;
    	    case 2:
    	        turnAround();
    	        break;
    	    case 3:
    	        turnright();
    	        break;
    	    case 4:
    	        break;
    	    case 5:
    	        break;
    	   }
    	   return;
      }
   }