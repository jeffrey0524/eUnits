import edu.fcps.karel2.Display;

public class Dorothy extends Athlete {

	public Dorothy() {
		// TODO Auto-generated constructor stub
	}

	public Dorothy(int x, int y) {
		super(x, y,Display.EAST,0);
		// TODO Auto-generated constructor stub
	}

	public boolean findPath() {
		if(leftIsClear()) {
			turnleft();
			move();
			if(nextToABeeper()) {
				return true;
			}
			turnAround();
			move();
			turnleft();
		}
		if(rightIsClear()) {
			turnRight();
			move();
			if(nextToABeeper()) {
				return true;
			}
			turnAround();
			move();
			turnRight();
		}
		/*if(!frontIsClear() && leftIsClear()) {
			turnleft();
			move();
			if(nextToABeeper()) {
				return true;
			}
			turnAround();
			move();
			
			move();
			if(nextToABeeper()) {
				return true;
			}
			turnAround();
			move();
			turnRight();
		}else {
			if(nextToABeeper()) {
				return true;
			}
			turnAround();
			move();
			turnright();
			move();
			if(nextToABeeper()) {
				return true;
			}
			turnAround();
			move();
			move();
			if(nextToABeeper()) {
				return true;
			}
			turnAround();
			move();
			turnRight();
		}*/
		return false;
	}
	 public void fllowPath() {
		 //停在路徑最後一個beeper 沒撞牆就回頭 撞牆就不動
		 while(nextToABeeper() && frontIsClear()) {
			 move();
		 }
		 if(!nextToABeeper()) {
			 turnAround();
			 move();
			 turnAround();
		 }
	 }
}
